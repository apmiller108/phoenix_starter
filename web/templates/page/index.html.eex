<h1><%= gettext "It's the  %{name}", name: "PhoenixStarter" %></h1>

<div>
  <%= unless @current_user, do: link "Register", to: user_path(@conn, :new) %>
</div>
<div>
  <%= if @current_user do %>
    <%= link "Sign out",  to: session_path(@conn, :delete, @current_user), method: :delete %>
  <% else %>
    <%= link "Sign in",  to: session_path(@conn, :new) %>
  <% end %>
</div>
